<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiCalculator.Views.CalcPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:MauiCalculator.ViewModels"
    Title="CalcPageView"
    x:DataType="viewModels:CalcPageViewModel">
    <Grid RowDefinitions=".4*,.6*">
        <VerticalStackLayout>
            <Label StyleClass="LabelText, LabelOperations" Text="{Binding Formula}" />
            <Label StyleClass="LabelText, LabelResults" Text="{Binding Result}" />
        </VerticalStackLayout>
        <Grid Grid.Row="1">
            <BoxView StyleClass="MainBoxView" />
            <Grid
                Padding="15"
                ColumnDefinitions="*,*,*,*"
                ColumnSpacing="15"
                RowDefinitions="*,*,*,*,*"
                RowSpacing="15">
                <!--#region Row 1-->
                <Button Style="{StaticResource YellowButton}" Text="AC" />
                <Button
                    Grid.Column="1"
                    Style="{StaticResource YellowButton}"
                    Text="âŒ«" />
                <Button
                    Grid.Column="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter=" % "
                    Style="{StaticResource YellowButton}"
                    Text="%" />
                <Button
                    Grid.Column="3"
                    Command="{Binding OperationCommand}"
                    CommandParameter=" / "
                    Style="{StaticResource RedButton}"
                    Text="/" />
                <!--#endregion-->
                <!--#region Row 2-->
                <Button
                    Grid.Row="1"
                    Command="{Binding OperationCommand}"
                    CommandParameter="7"
                    Text="7" />
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Command="{Binding OperationCommand}"
                    CommandParameter="8"
                    Text="8" />
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="9"
                    Text="9" />
                <Button
                    Grid.Row="1"
                    Grid.Column="3"
                    Command="{Binding OperationCommand}"
                    CommandParameter=" * "
                    Style="{StaticResource RedButton}"
                    Text="*" />
                <!--#endregion-->
                <!--#region Row 3-->
                <Button
                    Grid.Row="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="4"
                    Text="4" />
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Command="{Binding OperationCommand}"
                    CommandParameter="5"
                    Text="5" />
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="6"
                    Text="6" />
                <Button
                    Grid.Row="2"
                    Grid.Column="3"
                    Command="{Binding OperationCommand}"
                    CommandParameter=" - "
                    Style="{StaticResource RedButton}"
                    Text="-" />
                <!--#endregion-->
                <!--#region Row 4-->
                <Button
                    Grid.Row="3"
                    Command="{Binding OperationCommand}"
                    CommandParameter="1"
                    Text="1" />
                <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Command="{Binding OperationCommand}"
                    CommandParameter="2"
                    Text="2" />
                <Button
                    Grid.Row="3"
                    Grid.Column="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="3"
                    Text="3" />
                <Button
                    Grid.Row="3"
                    Grid.Column="3"
                    Command="{Binding OperationCommand}"
                    CommandParameter=" + "
                    Style="{StaticResource RedButton}"
                    Text="+" />
                <!--#endregion-->
                <!--#region Row 5-->
                <Button
                    Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="0"
                    Text="0" />
                <Button
                    Grid.Row="4"
                    Grid.Column="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="."
                    Text="." />
                <Button
                    Grid.Row="4"
                    Grid.Column="3"
                    Style="{StaticResource RedButton}"
                    Text="=" />
                <!--#endregion-->
            </Grid>
        </Grid>
    </Grid>
</ContentPage>