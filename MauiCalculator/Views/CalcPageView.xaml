<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiCalculator.Views.CalcPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CalcPageView">
    <Grid RowDefinitions=".4*,.6*">
        <VerticalStackLayout>
            <Label StyleClass="LabelText, LabelOperations" Text="5 * 5" />
            <Label StyleClass="LabelText, LabelResults" Text="25" />
        </VerticalStackLayout>
        <Grid Grid.Row="1">
            <BoxView StyleClass="MainBoxView" />
            <Grid
                Padding="15"
                ColumnDefinitions="*,*,*,*"
                ColumnSpacing="15"
                RowDefinitions="*,*,*,*,*"
                RowSpacing="15">
                <!--#region Row 1-->
                <Button Style="{StaticResource YellowButton}" Text="AC" />
                <Button
                    Grid.Column="1"
                    Style="{StaticResource YellowButton}"
                    Text="âŒ«" />
                <Button
                    Grid.Column="2"
                    Style="{StaticResource YellowButton}"
                    Text="%" />
                <Button
                    Grid.Column="3"
                    Style="{StaticResource RedButton}"
                    Text="/" />
                <!--#endregion-->
                <!--#region Row 2-->
                <Button Grid.Row="1" Text="7" />
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="8" />
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Text="9" />
                <Button
                    Grid.Row="1"
                    Grid.Column="3"
                    Style="{StaticResource RedButton}"
                    Text="*" />
                <!--#endregion-->
                <!--#region Row 3-->
                <Button Grid.Row="2" Text="4" />
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="5" />
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Text="6" />
                <Button
                    Grid.Row="2"
                    Grid.Column="3"
                    Style="{StaticResource RedButton}"
                    Text="-" />
                <!--#endregion-->
                <!--#region Row 4-->
                <Button Grid.Row="3" Text="1" />
                <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Text="2" />
                <Button
                    Grid.Row="3"
                    Grid.Column="2"
                    Text="3" />
                <Button
                    Grid.Row="3"
                    Grid.Column="3"
                    Style="{StaticResource RedButton}"
                    Text="+" />
                <!--#endregion-->
                <!--#region Row 5-->
                <Button
                    Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Text="0" />
                <Button
                    Grid.Row="4"
                    Grid.Column="2"
                    Text="." />
                <Button
                    Grid.Row="4"
                    Grid.Column="3"
                    Style="{StaticResource RedButton}"
                    Text="=" />
                <!--#endregion-->
            </Grid>
        </Grid>
    </Grid>
</ContentPage>